<section class="h-screen">
  <%= render "shared/nav_bar", locals: {middle: 'CATEGORIES', left: 'menu', right: 'LOGOUT'} %>
  <%= render "shared/flash" %>
  <div class="flex flex-col bg-background pb-20 pt-16">
    <% if @categories.empty? %>
      <div class="text-center text-2xl text-gray-600">No categories yet</div>
    <% else %>
      <% @categories.each do |category| %>
        <%= render partial: "category_card", locals: { category: } %>
      <% end %>
    <% end %>
  </div>
  <div class="flex bg-second justify-center fixed bottom-0 w-full text-center">
    <%= link_to "Add a new category", new_category_path, class: "w-full text-center border p-3 m-3 rounded-md text-white" %>
  </div>
</section>
