<section class="flex flex-col items-center w-full">
<h2 class="text-2xl font-bold mb-4">Reset your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full", placeholder: "Email" %>
  </div>

  <div class="actions w-full flex justify-center">
    <%= f.submit "Reset", class: "cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-2 w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
