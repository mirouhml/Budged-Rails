<section class="flex flex-col w-full h-full">
  <%= render "shared/nav_bar", locals: {middle: 'RESET YOUR PASSWORD', left: 'back', path: new_user_session_path} %>
  <%= render "shared/flash" %>
  <div class="flex items-center justify-center h-full">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full", placeholder: "Email" %>
      </div>

      <div class="actions w-full flex justify-center">
        <%= f.submit "Reset password", class: "cursor-pointer bg-main-500 hover:bg-main-700 text-white font-bold py-2 px-4 rounded my-2 w-full" %>
      </div>
    <% end %>
  </div>
</section>
